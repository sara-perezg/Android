<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Standard calculator button-->
    <style name="standardBTN" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/circle</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Landscape calculator button-->
    <style name="lanStnBTN" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/circle</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- option calculator button-->
    <style name="optionBTN" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/circle</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>